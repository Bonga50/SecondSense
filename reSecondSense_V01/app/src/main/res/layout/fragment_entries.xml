<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entries"
    android:fitsSystemWindows="true">



    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtTotal"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Recent title -->
                <TextView
                    android:id="@+id/txtRecentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Entries"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!-- Create button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_grey_roundedcorner_background"
                    android:text="CREATE" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutSortbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"

                app:layout_constraintTop_toBottomOf="@+id/layoutTitle">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnToday"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Today"
                    android:background="@drawable/ic_grey_roundedcorner_background"
                    android:layout_marginEnd="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnWeek"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Week"
                    android:background="@drawable/ic_grey_roundedcorner_background"
                    android:layout_marginEnd="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMonth"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Month"
                    android:background="@drawable/ic_grey_roundedcorner_background"
                    android:layout_marginEnd="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCustom"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Custom"
                    android:background="@drawable/ic_grey_roundedcorner_background"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lvEntries"
                android:layout_width="match_parent"
                android:paddingBottom="?attr/actionBarSize"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutSortbuttons"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test"
        android:gravity="end"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollLayout"
        app:layout_constraintHeight_default="wrap"/>



</androidx.constraintlayout.widget.ConstraintLayout>
