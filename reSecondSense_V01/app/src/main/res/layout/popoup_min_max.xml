<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/CnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="468dp"
        android:backgroundTint="#d3d3d3"
        android:text="Cancel"
        android:textColor="#FC000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/DoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="468dp"
        android:backgroundTint="#d3d3d3"
        android:text="Done"
        android:textColor="#FC000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toEndOf="@+id/CnButton" />
    <TextView
        android:id="@+id/MinView"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="Minimum:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/MaxView"
        app:layout_constraintEnd_toStartOf="@+id/InputMin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MinMaxTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/MaxView"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:text="Maximum:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CnButton"
        app:layout_constraintEnd_toStartOf="@+id/InputMax"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/MinMaxTitle"
        android:layout_width="379dp"
        android:layout_height="59dp"
        android:text="Min/Max"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/InputMin"
        android:layout_width="216dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:background="#d3d3d3"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/InputMax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MinMaxTitle"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/InputMax"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"
        android:background="#d3d3d3"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/DoButton"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>