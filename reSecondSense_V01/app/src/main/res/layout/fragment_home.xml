<?xml version="1.0" encoding="utf-8"?>
<!--Home fragment, this will hold the Recent entries ,the create button for entries and
graph for visual representation for goals-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/recentRecyclerView" >
        <!--Recent title-->
        <TextView
            android:id="@+id/txtRecentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Recent"
            android:textSize="25sp"
            android:textStyle="bold" />
        <!--The create button-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_grey_roundedcorner_background"
            android:text="CREATE" />

    </RelativeLayout>
        <!--will hold the recent entry items-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>