<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/CRTitle"
        android:layout_width="379dp"
        android:layout_height="59dp"
        android:text="Custom Range"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/SDView"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:text="Start Date:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/EnterStDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CRTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/EDView"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="End Date:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/EnterEdDate2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SDView"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/EnterStDate"
        android:layout_width="237dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="#d3d3d3"
        android:inputType="date"
        android:hint="Enter date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CRTitle" />

    <EditText
        android:id="@+id/EnterEdDate2"
        android:layout_width="237dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="#d3d3d3"
        android:inputType="date"
        android:hint="Enter date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterStDate" />
    <Button
        android:id="@+id/CanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#d3d3d3"
        android:text="Cancel"
        android:textColor="#FC000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/DnButton"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EDView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/DnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#d3d3d3"
        android:text="Done"
        android:textColor="#FC000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterEdDate2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>